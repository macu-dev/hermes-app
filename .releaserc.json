{
  "branches": ["main"],
  "repositoryUrl": "https://github.com/macu-dev/hermes-app",
  "debug": "false",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "chore", "release": false },
          { "type": "docs", "release": false },
          { "type": "perf", "release": "patch" },
          { "type": "build", "release": false },
          { "type": "deps", "release": "patch" },
          { "type": "ci", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "style", "release": false },
          { "type": "test", "release": false }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ New Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "chore", "section": "ğŸ§¹ Chore", "hidden": true },
            { "type": "docs", "section": "ğŸ“ Documentation", "hidden": true },
            { "type": "perf", "section": "âš¡ Performance" },
            { "type": "build", "section": "ğŸ­ Build", "hidden": true },
            { "type": "deps", "section": "ğŸ“¦ Dependencies" },
            { "type": "ci", "section": "ğŸ¤– CI", "hidden": true },
            { "type": "refactor", "section": "ğŸ”„ Refactoring" },
            { "type": "revert", "section": "ğŸ”™ Reverts" },
            { "type": "style", "section": "ğŸ¨ Styling", "hidden": true },
            { "type": "test", "section": "ğŸ§ª Tests", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/npm",
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "yarn.lock", "CHANGELOG.md"],
        "message": "chore(release): bump version to ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  ],
  "npmPublish": true,
  "pkgRoot": ".",
  "registry": "https://npm.pkg.github.com"
}
